# Academic Paper MCP Server Configuration
# Uncomment and modify as needed

# Database
ACADEMIC_DATABASE_URL=sqlite:///data/papers.db

# Vector store
ACADEMIC_CHROMA_PERSIST_DIR=./data/chroma
ACADEMIC_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5

# LLM Configuration
ACADEMIC_LLM_MODEL=qwen2.5:7b
ACADEMIC_OLLAMA_HOST=http://localhost:11434

# Processing
ACADEMIC_CHUNK_SIZE=800
ACADEMIC_MAX_EXTRACTION_TOKENS=12000

# Zotero (optional)
ACADEMIC_ZOTERO_ENABLED=false
# ACADEMIC_ZOTERO_PATH=/path/to/Zotero

# Logging
ACADEMIC_LOG_LEVEL=INFO
